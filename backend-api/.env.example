# =================================
# BACKEND API ENVIRONMENT VARIABLES
# =================================

# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_saas_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://rabbitmq:rabbitmq@localhost:5672

# Authentication Configuration
STACK_AUTH_PROJECT_ID=your_stack_auth_project_id
STACK_AUTH_PUBLISHABLE_KEY=your_stack_auth_publishable_key
STACK_AUTH_SECRET_KEY=your_stack_auth_secret_key
JWT_SECRET=your_jwt_secret_key_here

# Queue Configuration
SEND_MESSAGE_QUEUE=send_message

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS Configuration (optional)
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info

