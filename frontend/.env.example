# ==============================================
# üé® Frontend Application - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values
# This is the React frontend for the WhatsApp SaaS platform

# ==============================================
# üåê API CONFIGURATION
# ==============================================

# Backend API Connection
VITE_API_BASE_URL=http://localhost:3000/api
# Full URL to the backend API (without trailing slash)

# WebSocket Connection (for real-time features)
VITE_WS_BASE_URL=ws://localhost:3000
# WebSocket URL for real-time updates

# API Configuration
VITE_API_TIMEOUT=10000
# Request timeout in milliseconds
VITE_API_RETRY_ATTEMPTS=3
# Number of retry attempts for failed requests

# ==============================================
# üîê AUTHENTICATION CONFIGURATION
# ==============================================

# Stack Auth Integration
VITE_STACK_AUTH_PROJECT_ID=your-stack-auth-project-id
VITE_STACK_AUTH_PUBLISHABLE_KEY=your-stack-auth-publishable-key
VITE_STACK_AUTH_DOMAIN=your-domain.com
# Your domain for Stack Auth

# Authentication Settings
VITE_AUTH_REDIRECT_URL=http://localhost:5173/dashboard
# Redirect URL after successful login
VITE_AUTH_LOGOUT_REDIRECT_URL=http://localhost:5173/login
# Redirect URL after logout

# Session Management
VITE_SESSION_STORAGE_KEY=whatsapp_saas_session
VITE_TOKEN_STORAGE_KEY=whatsapp_saas_token
VITE_USER_STORAGE_KEY=whatsapp_saas_user

# ==============================================
# üöÄ APPLICATION CONFIGURATION
# ==============================================

# Application Metadata
VITE_APP_NAME=WhatsApp SaaS Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional WhatsApp messaging platform
VITE_APP_URL=http://localhost:5173

# Company Information
VITE_COMPANY_NAME=Your Company Name
VITE_COMPANY_WEBSITE=https://your-company.com
VITE_SUPPORT_EMAIL=support@your-company.com
VITE_SUPPORT_PHONE=+1-555-0123

# ==============================================
# üé® UI/UX CONFIGURATION
# ==============================================

# Theme Configuration
VITE_DEFAULT_THEME=light
# Options: light, dark, auto
VITE_ENABLE_THEME_SWITCHER=true
VITE_PRIMARY_COLOR=#3b82f6
# Primary brand color (hex format)

# Layout Settings
VITE_SIDEBAR_DEFAULT_COLLAPSED=false
VITE_ENABLE_BREADCRUMBS=true
VITE_ITEMS_PER_PAGE=20
# Default pagination size

# Date/Time Format
VITE_DATE_FORMAT=MM/dd/yyyy
VITE_TIME_FORMAT=HH:mm:ss
VITE_TIMEZONE=America/New_York
# User's default timezone

# ==============================================
# üì± FEATURE FLAGS
# ==============================================

# Core Features
VITE_ENABLE_REAL_TIME_UPDATES=true
# Enable real-time message status updates
VITE_ENABLE_DARK_MODE=true
# Enable dark mode toggle
VITE_ENABLE_NOTIFICATIONS=true
# Enable browser notifications

# Advanced Features
VITE_ENABLE_ANALYTICS=true
# Enable analytics dashboard
VITE_ENABLE_BULK_OPERATIONS=true
# Enable bulk contact/campaign operations
VITE_ENABLE_TEMPLATES_MANAGEMENT=true
# Enable message templates management

# Experimental Features
VITE_ENABLE_DRAG_DROP=true
# Enable drag and drop for file uploads
VITE_ENABLE_KEYBOARD_SHORTCUTS=true
# Enable keyboard shortcuts
VITE_ENABLE_QUICK_ACTIONS=true
# Enable quick action buttons

# ==============================================
# üìä ANALYTICS & TRACKING
# ==============================================

# Google Analytics
VITE_GA_TRACKING_ID=GA-XXXXXXXXX
# Google Analytics tracking ID

# Mixpanel Analytics
VITE_MIXPANEL_TOKEN=your-mixpanel-token
# Mixpanel project token

# Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# Sentry error tracking DSN
VITE_ENABLE_ERROR_TRACKING=true

# User Analytics
VITE_ENABLE_USER_ANALYTICS=true
VITE_ANALYTICS_SAMPLE_RATE=0.1
# Percentage of events to track (0.0 to 1.0)

# ==============================================
# üîß DEVELOPMENT CONFIGURATION
# ==============================================

# Development Server
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=0.0.0.0
# Development server host (0.0.0.0 for all interfaces)

# Development Features
VITE_ENABLE_DEV_TOOLS=true
# Enable Redux DevTools, React DevTools, etc.
VITE_ENABLE_HOT_RELOAD=true
# Enable hot module replacement
VITE_ENABLE_MOCK_API=false
# Use mock API responses for development

# Debug Settings
VITE_DEBUG_MODE=false
# Enable debug logging in browser console
VITE_LOG_LEVEL=info
# Console log level (error, warn, info, debug)
VITE_ENABLE_NETWORK_LOGGING=false
# Log all API requests/responses

# ==============================================
# üìÅ FILE UPLOAD CONFIGURATION
# ==============================================

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
# 10MB in bytes
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mp3,application/pdf
# Comma-separated list of allowed MIME types

# Media Configuration
VITE_IMAGE_QUALITY=0.8
# Image compression quality (0.0 to 1.0)
VITE_ENABLE_IMAGE_PREVIEW=true
# Enable image preview before upload
VITE_ENABLE_PROGRESS_INDICATOR=true
# Show upload progress

# ==============================================
# üîî NOTIFICATION CONFIGURATION
# ==============================================

# Browser Notifications
VITE_ENABLE_BROWSER_NOTIFICATIONS=true
VITE_NOTIFICATION_TIMEOUT=5000
# Auto-dismiss timeout in milliseconds

# Toast Notifications
VITE_TOAST_POSITION=top-right
# Options: top-left, top-center, top-right, bottom-left, bottom-center, bottom-right
VITE_TOAST_AUTO_CLOSE=true
VITE_TOAST_TIMEOUT=3000
# Toast auto-close timeout

# Sound Notifications
VITE_ENABLE_SOUND_NOTIFICATIONS=false
VITE_NOTIFICATION_SOUND_URL=/sounds/notification.mp3

# ==============================================
# üåç INTERNATIONALIZATION
# ==============================================

# Language Settings
VITE_DEFAULT_LANGUAGE=en
# Default language code (en, es, pt, etc.)
VITE_AVAILABLE_LANGUAGES=en,es,pt
# Comma-separated list of available languages
VITE_ENABLE_LANGUAGE_SWITCHER=true

# Locale Settings
VITE_DEFAULT_LOCALE=en-US
VITE_CURRENCY=USD
VITE_CURRENCY_SYMBOL=$

# ==============================================
# üöÄ PERFORMANCE CONFIGURATION
# ==============================================

# Caching
VITE_ENABLE_SERVICE_WORKER=true
# Enable service worker for caching
VITE_CACHE_TTL=300000
# Cache time-to-live in milliseconds (5 minutes)

# Lazy Loading
VITE_ENABLE_LAZY_LOADING=true
# Enable lazy loading for components and images
VITE_ENABLE_CODE_SPLITTING=true
# Enable code splitting for better performance

# Bundle Optimization
VITE_ENABLE_GZIP=true
# Enable gzip compression
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
# Warn if chunk size exceeds this limit (KB)

# ==============================================
# üîí SECURITY CONFIGURATION
# ==============================================

# Content Security Policy
VITE_ENABLE_CSP=true
# Enable Content Security Policy headers
VITE_CSP_REPORT_URI=https://your-domain.com/csp-report
# URI for CSP violation reports

# Security Headers
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_ENABLE_CONTENT_TYPE_OPTIONS=true

# API Security
VITE_ENABLE_REQUEST_SIGNING=false
# Enable request signing for enhanced security
VITE_API_KEY_HEADER=X-API-Key
# Header name for API key (if required)

# ==============================================
# üß™ TESTING CONFIGURATION
# ==============================================

# Test Environment
VITE_TEST_API_BASE_URL=http://localhost:3001/api
# API URL for testing environment
VITE_TEST_TIMEOUT=10000
# Test timeout in milliseconds

# Mock Data
VITE_ENABLE_MOCK_DATA=false
# Use mock data for testing
VITE_MOCK_DELAY=500
# Simulated API delay for testing

# ==============================================
# üöÄ PRODUCTION CONFIGURATION
# ==============================================

# Production API (Vercel, Netlify, etc.)
# VITE_API_BASE_URL=https://api.your-domain.com/api
# VITE_WS_BASE_URL=wss://api.your-domain.com

# Production Stack Auth
# VITE_STACK_AUTH_PROJECT_ID=your-production-stack-auth-project-id
# VITE_STACK_AUTH_PUBLISHABLE_KEY=your-production-stack-auth-publishable-key
# VITE_STACK_AUTH_DOMAIN=your-production-domain.com

# Production Application
# VITE_APP_URL=https://app.your-domain.com
# VITE_AUTH_REDIRECT_URL=https://app.your-domain.com/dashboard
# VITE_AUTH_LOGOUT_REDIRECT_URL=https://app.your-domain.com/login

# Production Analytics
# VITE_GA_TRACKING_ID=GA-PRODUCTION-ID
# VITE_MIXPANEL_TOKEN=your-production-mixpanel-token
# VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id

# Production Optimizations
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_ERROR_TRACKING=true
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error

# ==============================================
# üìã SETUP INSTRUCTIONS
# ==============================================
#
# 1. Copy this file to .env in the frontend directory
# 2. Fill in your actual values (replace 'your-*' placeholders)
# 3. Ensure backend API is running and accessible
# 4. Start the frontend: npm run dev
#
# Required Setup:
# - Stack Auth project configured
# - Backend API running and accessible
# - Node.js 18+ and npm/yarn installed
#
# For development:
# 1. Install dependencies: npm install
# 2. Copy and configure environment file
# 3. Start development server: npm run dev
# 4. Open http://localhost:5173 in browser
#
# For production deployment:
# 1. Update all production variables above
# 2. Build the application: npm run build
# 3. Deploy dist/ folder to your hosting platform
# 4. Configure environment variables on hosting platform
#
# Hosting Platform Examples:
# - Vercel: Add variables in Vercel dashboard
# - Netlify: Add variables in Netlify dashboard
# - Railway: Add variables in Railway dashboard
# - Custom server: Set environment variables before starting
#